#!/bin/bash

set -o pipefail
set -o nounset
set -e

if (( $# == 0 )) || [ -z "$1" ]; then
    >&2 echo "Missing required cluster name argument"
    exit 1
fi;

sudo apt-get install jq -y
CLUSTER_NAME="$1"

CLUSTER_JSON=`aws eks describe-cluster --name $CLUSTER_NAME`
ENDPOINT=`echo "$CLUSTER_JSON" | jq -r '.cluster.endpoint'`
CERT_DATA=`echo "$CLUSTER_JSON" | jq -r '.cluster.certificateAuthority.data'`


cat <<EOF
apiVersion: v1
clusters:
- cluster:
    server: $ENDPOINT
    certificate-authority-data: $CERT_DATA
  name: $CLUSTER_NAME
contexts:
- context:
    cluster: $CLUSTER_NAME
    user: $CLUSTER_NAME
  name: $CLUSTER_NAME
current-context: $CLUSTER_NAME
kind: Config
preferences: {}
users:
- name: $CLUSTER_NAME
  user:
    exec:
      apiVersion: client.authentication.k8s.io/v1alpha1
      command: heptio-authenticator-aws
      args:
        - "token"
        - "-i"
        - "$CLUSTER_NAME"
      env: null
EOF
