node {
    stage ('Checkout'){
        checkout scm
    }
    stage ('Build'){
        echo "BUILD_CAUSE ${currentBuild.rawBuild.getCauses()[0].toString()}"
        def PORT = 5000 // branch development
        if(env.BRANCH_NAME == "main" ||  env.BRANCH_NAME == "master" || env.BRANCH_NAME == "release"){
            PORT = 4000
            console.log("this is production branch, so using port ${PORT}")
        }
        sh "docker build -t zloof/morse --target server  --build-arg PORT=${PORT} --build-arg BRANCH_NAME=${env.BRANCH_NAME}  ."
    }
    stage ('Push'){
        // login to AWS-ECR and push the docker image
        docker.withRegistry("https://138858731413.dkr.ecr.us-east-1.amazonaws.com", "ecr:us-east-1:demo-ecr-credentials") {
            docker.image("zloof/morse").push(env.BRANCH_NAME)
        }
    }
    stage ('Trigger testing'){

        build job: "morse-pipeline-test", wait: false
    }
}
